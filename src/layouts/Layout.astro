---
import '@fontsource/inter';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Samuel's Portfolio - Software Engineer & Security Expert" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-black text-white">
    <div class="fixed inset-0 -z-10">
      <!-- Grid background -->
      <div class="absolute inset-0 h-screen bg-[linear-gradient(to_right,#4f4f4f12_1px,transparent_1px),linear-gradient(to_bottom,#4f4f4f12_1px,transparent_1px)] bg-[size:4rem_4rem]"></div>
      <div class="absolute inset-0 top-screen bg-[linear-gradient(to_right,#4f4f4f2e_1px,transparent_1px),linear-gradient(to_bottom,#4f4f4f2e_1px,transparent_1px)] bg-[size:14px_24px]"></div>
      
      <!-- Abstract shapes -->
      <div class="absolute inset-0">
        <div class="absolute left-1/4 top-1/4 h-[500px] w-[500px] -translate-x-1/2 -translate-y-1/2 rounded-full bg-purple-500/10 blur-[100px]"></div>
        <div class="absolute right-1/4 bottom-1/4 h-[500px] w-[500px] translate-x-1/2 translate-y-1/2 rounded-full bg-blue-500/10 blur-[100px]"></div>
      </div>
      
      <!-- Gradient overlay -->
      <div class="absolute inset-0 bg-gradient-to-b from-black via-black/90 to-black/80"></div>
    </div>
    
    <slot />
  </body>
</html>

<style is:global>
  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
  }
  
  html {
    font-family: 'Inter', system-ui, sans-serif;
    background: #13151a;
    scroll-behavior: smooth;
  }
  
  body {
    margin: 0;
    padding: 0;
  }
</style>