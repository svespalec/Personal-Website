---
import { Icon } from 'astro-icon/components';
---

<nav class="sticky top-0 z-50 bg-white/5 backdrop-blur-xl border-b border-white/10">
  <div class="container mx-auto px-4">
    <div class="flex items-center justify-between h-16">
      <a href="/" class="font-bold text-white text-xl">Portfolio</a>
      
      <div class="flex items-center gap-4">
        <a 
          href="https://github.com/yourusername" 
          class="flex items-center gap-2 px-4 py-2 rounded-full bg-white/5 text-white hover:bg-white/10 transition-colors"
        >
          <Icon name="mdi:github" class="w-4 h-4" />
          GitHub
        </a>
        <a 
          href="https://linkedin.com/in/yourusername" 
          class="flex items-center gap-2 px-4 py-2 rounded-full bg-white/5 text-white hover:bg-white/10 transition-colors"
        >
          <Icon name="mdi:linkedin" class="w-4 h-4" />
          LinkedIn
        </a>
        <a 
          href="/resume.pdf" 
          class="px-4 py-2 rounded-full bg-purple-500/10 text-purple-300 hover:bg-purple-500/20 transition-colors"
        >
          Resume
        </a>
      </div>
    </div>
  </div>
</nav>