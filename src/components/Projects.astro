---
import { Icon } from 'astro-icon/components';
import type { Project } from '../types';
import { projects } from '../data/projects';
---

<section class="py-16 bg-gradient-to-b from-purple-900/20 to-black">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold mb-8 text-white">Featured Projects</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      {projects.map(project => (
        <div class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-xl overflow-hidden hover:border-purple-500/20 transition-all duration-300 p-6">
          <div class="flex justify-between items-start gap-3 mb-4">
            <h3 class="text-xl font-bold text-white">{project.title}</h3>
            <div class="flex gap-2">
              <a href={project.github} class="text-gray-400 hover:text-purple-400 transition-colors">
                <Icon name="mdi:github" class="w-5 h-5" />
              </a>
              <a href={project.demo} class="text-gray-400 hover:text-purple-400 transition-colors">
                <Icon name="mdi:external-link" class="w-5 h-5" />
              </a>
            </div>
          </div>
          <p class="text-gray-400 mb-4">{project.description}</p>
          <div class="flex flex-wrap gap-2">
            {project.tags.map(tag => (
              <span class="px-3 py-1 rounded-full bg-purple-500/10 text-purple-300 border border-purple-500/20 text-sm">
                {tag}
              </span>
            ))}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>