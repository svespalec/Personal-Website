---
import { Icon } from 'astro-icon/components';
import type { SkillSection } from '../types';
import { skills } from '../data/skills';
---

<section class="py-6 bg-[#030304]">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold mb-6 text-white">Skills</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      {skills.map((skill, index) => (
        <div class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-xl overflow-hidden 
                    hover:border-purple-500/20 hover:bg-white/[0.07] 
                    transition-all duration-300 p-5 group fade-in-up"
                 style={`animation-delay: ${index * 150}ms`}>
          <div class="flex justify-between items-start gap-4 mb-3">
            <h3 class="text-xl font-bold text-white group-hover:text-purple-300 transition-colors">{skill.title}</h3>
            <Icon name={skill.icon} class="w-6 h-6 text-gray-400 group-hover:text-purple-400 transition-colors transform hover:scale-110 duration-200" />
          </div>
          <p class="text-base text-gray-400 mb-4 group-hover:text-gray-300 transition-colors">{skill.description}</p>
          <div class="flex flex-wrap gap-2">
            {skill.items.map(item => (
              <span class="px-3 py-1 rounded-full bg-purple-500/10 text-purple-300 border border-purple-500/20 text-sm
                           hover:bg-purple-500/20 hover:border-purple-500/40 transition-all duration-200 cursor-default">
                {item}
              </span>
            ))}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .fade-in-up {
    animation: fadeInUp 0.8s ease-out forwards;
    opacity: 0;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>