---
import { Icon } from 'astro-icon/components';
import type { SkillSection } from '../types';
import { skills } from '../data/skills';
---

<section class="py-6 bg-gradient-to-b from-black to-purple-900/20">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold mb-6 text-white">Skills</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      {skills.map(skill => (
        <div class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-xl overflow-hidden hover:border-purple-500/20 transition-all duration-300 p-6">
          <div class="flex items-start gap-4">
            <Icon name={skill.icon} class="w-8 h-8 text-purple-400 mt-1" />
            <div class="flex-1">
              <h3 class="text-xl font-semibold text-white mb-2">{skill.title}</h3>
              <p class="text-base text-gray-400 mb-4">{skill.description}</p>
              <div class="flex flex-wrap gap-2">
                {skill.items.map(item => (
                  <span class="px-3 py-1 rounded-full bg-purple-500/10 text-purple-300 border border-purple-500/20 text-sm">
                    {item}
                  </span>
                ))}
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>